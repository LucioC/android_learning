<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hp.samples.moviesearch" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movie_app"
        android:label="@string/app_name"
        android:name=".MyApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchResultActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hp.samples.moviesearch.WatchlistActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hp.samples.moviesearch.MovieDetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hp.samples.moviesearch.SearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data android:name="AA_DB_NAME" android:value="watchList.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
    </application>

</manifest>
